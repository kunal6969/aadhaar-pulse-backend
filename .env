# Database Settings
# For local development (SQLite)
DATABASE_PATH=data/aadhaar_pulse.db
USE_POSTGRES=false

# For production (PostgreSQL - Supabase)
# Set USE_POSTGRES=true and provide DATABASE_URL to use PostgreSQL
# DATABASE_URL should be set as environment variable (not in this file for security!)
DATABASE_URL=

# Data Directories
RAW_DATA_DIR=data/raw
PROCESSED_DATA_DIR=data/processed
GEOJSON_DIR=data/geojson
ML_MODELS_DIR=app/ml_models/trained

# CSV Source Directories (adjust paths based on your setup)
# These should point to where your CSV files are located
ENROLLMENT_CSV_DIR=../api_data_aadhar_enrolment/api_data_aadhar_enrolment
DEMOGRAPHIC_CSV_DIR=../api_data_aadhar_demographic/api_data_aadhar_demographic
BIOMETRIC_CSV_DIR=../api_data_aadhar_biometric/api_data_aadhar_biometric
